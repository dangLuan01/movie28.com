---
//import { ClientRouter, fade } from "astro:transitions";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
const { meta = {} } = Astro.props;
const { title } = Astro.props;
const description = meta.description || "Movie28 giải trí bất cứ đâu.";
const rel = Astro.url;
const image = meta.image
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
		<meta name="robots" content="index, follow" />
		<!-- Favicons -->
		<link rel="icon" type="image/png" href="/favicon.svg" sizes="32x32" />
		<link rel="apple-touch-icon" href="/favicon.svg" />
		<link rel="canonical" href={ rel }>
		<title>{title ? title : '28Movie'}</title>
		<meta name="description" content={ description } />
		<meta name="title" content={ title ? title : 'Movie28' }>
        <!-- meta SEO Facebook-Linkedln -->
		<meta property="og:title" content={ title ? title : 'Movie28' } />
		<meta property="og:description" content={ description }/>
		<meta property="og:type" content="website" />
		<meta property="og:url" content={ rel } />
		<meta property="og:image" content={ image ?? '' } />
		<meta property="og:site_name" content="Website Happy" />
		<!-- End meta SEO Facebook-Linkedln -->
		<!-- meta SEO Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title ? title : 'Movie28'} />
		<meta name="twitter:description" content={ description } />
		<meta name="twitter:image" content={ image ?? '' } />
		<meta name="twitter:site" content="@username" />
		<!-- End meta SEO Twitter -->
		<meta name="referrer" content="strict-origin-when-cross-origin" />

		<!-- <ClientRouter /> -->
		
	</head>
	<body>
		<!-- header (relative style) -->
		<Header />
		<!-- end header -->
        <!-- main content -->
		<main>
			<slot />
		</main>
        <!-- end main content --> 
        <!-- footer -->
		<Footer />
        <!-- end footer -->
		<!-- JS -->
		<script src="/js/jquery-3.5.1.min.js" type="module"></script>
		<script src="/js/bootstrap.bundle.min.js" type="module"></script>
		<script src="/js/owl.carousel.min.js" type="module"></script>
		<script src="/js/slider-radio.js" type="module"></script>
		<script src="/js/select2.min.js" type="module"></script>
		<script src="/js/jquery.magnific-popup.min.js" type="module"></script>
		<script src="/js/jquery.magnific-popup.min.js" type="module"></script>
		<script>import "../styles/js/main.js";</script>	
	</body>
	
</html>